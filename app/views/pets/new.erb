<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
        <label for="name" Name:></label><br>
        <input type="text" name="pet[name]" id="pet_name">

        <label for="existing_owner"></label>
        <%@owners.each do |owner|%>
        <input type="radio" name="pet[owner_id]" id="<%=owner.id%>" value="<%=owner.id%>"><%=owner.name%>
        </input>
        <%end%>
        <label> and/or, create a new owner:</label>
  
  <label>Name:</label>
    <input type="text" name="owner[name]" id="owner_name"></input>
  <input type="submit" value="Create Pet">
</form>
