<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
    <label for="pet[name]">Pet name:</label>
    <input type="text" name="pet[name]" id="pet_name">


<h3>Owners</h3>
<p>Select an existing owner or create a new one </p>
 
 
    <h3>Existing owners</h3>
    <% @owners.each do |owner| %>
        <input type="radio" id="<%= owner.id %>" name="pet[owner_id]" value="<%= owner.id %>"> <%= owner.name%>

    <% end %>
    <br>

    <h3>Create a new owner</h3>
    <label for="owner[name]">New Owner</label>
    <input type="text" name="owner[name]" id="owner_name">
    <input type="submit" value="Create Pet">
</form>