<h1>Create a new Pet</h1>

<form method="post" action="/pets">
<label>Name:</label>

<br>
<input type="text" name="pet[name]" id="pet_name">

<br>

 <h3>Choose an Existing Owner</h3>
  <% @owners.each do |owner| %>
    <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>"><br>
  <% end %>
<br>

<h3>and/or create a New Owner</h3>
  <label>Owner Name: </label>
  <br>
  <input type="text" name="owner[name]" id="owner_name">
  <br>

<input type="submit" value="Create Pet" name="submit">



</form>