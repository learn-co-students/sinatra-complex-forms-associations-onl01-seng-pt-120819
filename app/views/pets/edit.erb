<h1>Update Pet</h1>

<h2> Edit for <%=@pet.name%> </h2>

<form action="/pets/<%=@pet.id%>" method="POST">
<input type="hidden" name="_method" id="hidden" value="patch"> 
<label >Edit Pet's Name:</label><br>
<input type="text" name="pet[name]" id="pet_name" value="<%=@pet.name%>">

<% Owner.all.each do |owner| %>
      <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id%>" <%='checked' if @pet.owner %>><%= owner.name %></input><br>
 <% end %>
    <br>
 
    <h3>New Owner</h3>
    <label>Owner Name: </label>
    <br>
    <input type="text" name="owner[name]" id="owner_name">
    <br><br>
 
    <input type="submit" value="Update Pet">
</form>
